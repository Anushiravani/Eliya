<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="5dp">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">


<!--        <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"

                android:minHeight="100dp"
                android:scaleType="fitCenter" />-->

        <ImageView


                android:layout_width="match_parent"


                android:layout_height="180dp"
                card_view:srcCompat="@drawable/pattern"
                android:id="@+id/iv"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"

                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintVertical_bias="0.0"/>

        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btndelete"
                android:clickable="true"
                card_view:fabSize="mini"
                card_view:srcCompat="@drawable/ic_trash"
                card_view:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"

                android:elevation="2dp"

                android:stateListAnimator="@null"

                card_view:backgroundTint="@color/white"/>
        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/zoom"
                android:clickable="true"
                card_view:fabSize="mini"

                card_view:srcCompat="@drawable/ic_search"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:backgroundTint="@color/white"
                card_view:elevation="5dp"
                android:elevation="2dp"

                android:stateListAnimator="@null"
                card_view:layout_constraintStart_toEndOf="@+id/btndelete" android:layout_marginBottom="8dp"
                android:layout_marginStart="4dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>