<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        android:orientation="vertical"
        tools:context=".SendActivity">


    <ImageView
            android:layout_width="180dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_logoeliya"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:id="@+id/imageView"


            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_anchorGravity="top|center" app:layout_anchor="@+id/include2"/>

    <include layout="@layout/content_send" android:id="@+id/include2"
             app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_height="0dp"
             android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
             app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
             android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
             android:layout_marginTop="24dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="439dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_attach_icon"
            app:backgroundTint="@color/colorPrimary" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="جهت انتخاب فابل و ارسال مدارک روی دکمه کنار کلیلک کنید"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3" app:layout_anchorGravity="right|bottom"
            app:layout_anchor="@+id/include2" android:textColor="@color/white" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/fab" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/fab"
            app:layout_constraintTop_toTopOf="@+id/fab"/>

</android.support.constraint.ConstraintLayout>