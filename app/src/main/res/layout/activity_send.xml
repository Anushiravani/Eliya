<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
android:layoutDirection="rtl"
        tools:context=".SendActivity">


    <include layout="@layout/content_send" android:id="@+id/include2"
             android:layout_height="0dp"
             android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
             app:layout_constraintBottom_toTopOf="@+id/boxsend"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="150dp"
                  app:layout_constraintBottom_toTopOf="@+id/fab" app:layout_constraintEnd_toEndOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:weightSum="3"
                  android:visibility="gone"
                  android:id="@+id/boxsend" android:layout_marginBottom="8dp"
                  android:paddingBottom="7dp"
                  app:layout_constraintHorizontal_bias="0.0">



        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                      android:orientation="horizontal" android:weightSum="2">


<TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7"
          android:textColor="@color/colorPrimaryDark"
          android:layout_gravity="center"
          android:gravity="center"
          android:textAlignment="center"
          android:text="انتخاب کارشناس :"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:layout_margin="4dp"
                    android:background="@color/white"
            >

                <Spinner android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:layout_margin="4dp"
                         android:prompt="@string/yourc"
                         android:textAlignment="center"
                         android:layoutDirection="rtl"
                         android:id="@+id/selectd"

                         android:spinnerMode="dialog"





                />
            </LinearLayout>



        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
                      android:orientation="horizontal" android:weightSum="2">


            <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="0.7"
                      android:textColor="@color/colorPrimaryDark"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textAlignment="center"
                      android:text="شماره قرار داد :  "/>


            <EditText android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1.3"
                      android:inputType="number"
                      android:textAlignment="center"
                      android:hint="xxxxxxxxx"
                      android:layout_margin="4dp"
                      android:background="@color/white"/>

        </LinearLayout>










        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <Button android:layout_width="match_parent" android:layout_height="match_parent"
            android:background="@color/colorPrimary"
                    android:layout_margin="4dp"
                    android:id="@+id/sendodcsbtn"
                    android:textColor="@color/white"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="ارسال مدارک"
            />
        </LinearLayout>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="439dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@drawable/ic_attach_icon"
            app:backgroundTint="@color/colorPrimary" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="جهت انتخاب مدارک روی دکمه کنار کلیک کنید"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textselectimage" app:layout_anchorGravity="right|bottom"
            app:layout_anchor="@+id/include2" android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/fab" app:layout_constraintTop_toTopOf="@+id/fab"/>

</android.support.constraint.ConstraintLayout>