<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2"
        android:orientation="vertical"

        tools:context=".ListDocsActivity">


    <ImageView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_logoeliya"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:id="@+id/imageView"


            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="جهت ارسال مدارک لطفا یکی از گزینه های زیر را انتخاب فرمایید"
              android:textColor="@color/white"


              android:id="@+id/textselect"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="16dp"/>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/docs_list"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textselect" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>







</android.support.constraint.ConstraintLayout>