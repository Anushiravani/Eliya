<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
              android:orientation="vertical"

              android:background="@drawable/background2"
	tools:context=".MainActivity">


    <ImageView
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_logoeliya"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:id="@+id/imageView"
            android:layout_marginTop="30dp"


    />

   <!-- <ImageView android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:src="@drawable/completeprofile"
               android:contentDescription="@string/CompleteProfile"/>-->


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:layout_marginTop="30dp"

    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"

                android:orientation="horizontal"        >
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_x"
                    android:id="@+id/onlinechat"
                    android:layout_weight="1"
                    android:contentDescription="@string/OnlineChat"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_d"
                    android:layout_weight="1"
                    android:contentDescription="@string/contactUs"/>

        </LinearLayout>
      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_b"
                    android:layout_weight="1"
                    android:contentDescription="@string/OnlineChat"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_a"
                    android:layout_weight="1"
                    android:contentDescription="تماس با ما"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="11dp"
                android:orientation="horizontal">
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_b"
                    android:layout_weight="1"
                    android:id="@+id/aboutusbtn"
                    android:contentDescription="@string/OnlineChat"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_a"
                    android:layout_weight="1"
                    android:contentDescription="تماس با ما"/>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>